<% layout("/layouts/boilerplate") %>

<% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<!-- ✅ Font Awesome -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<style>
  /* Responsive Filter Bar */
  #filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 20px 0;
    gap: 1.3rem;
    align-items: center;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    transition: all 0.3s;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.05);
  }

  .filter i {
    font-size: 1.5rem;
    margin-bottom: 0.3rem;
  }

  .tax-info {
    display: none;
  }

  .tax-switch {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    margin-left: 1rem;
    display: flex;
    align-items: center;
  }

  /* Toggle Button */
  #filterToggleBtn {
    display: none;
    border: none;
    background: #fe424d;
    color: white;
    padding: 0.5rem 1.2rem;
    border-radius: 0.5rem;
    margin: 1rem auto;
  }

  /* Responsive Filter Row on Mobile */
  @media (max-width: 768px) {
    #filters {
      flex-wrap: nowrap;
      overflow-x: auto;
      justify-content: flex-start;
      padding: 10px 1rem;
      gap: 1rem;
      margin-top: 1rem;
      display: none;
    }

    .filter,
    .tax-switch {
      flex: 0 0 auto;
    }

    #filterToggleBtn {
      display: block;
    }
  }
</style>

<!-- ✅ Filter Toggle Button -->
<div class="text-center">
  <button id="filterToggleBtn">Toggle Filters</button>
</div>

<!-- ✅ Category Filters -->
<div id="filters">
  <% const categories = [
    { name: 'Trending', icon: 'fa-fire' },
    { name: 'Rooms', icon: 'fa-bed' },
    { name: 'Iconic Cities', icon: 'fa-city' },
    { name: 'Mountains', icon: 'fa-mountain' },
    { name: 'Castles', icon: 'fa-chess-rook' },
    { name: 'Beach', icon: 'fa-water-ladder' },
    { name: 'Farm', icon: 'fa-cow' },
    { name: 'Camping', icon: 'fa-campground' },
    { name: 'Arctic', icon: 'fa-snowflake' },
    { name: 'Domes', icon: 'fa-igloo' },
    { name: 'Boats', icon: 'fa-ship' },
  ]; %>

  <% for (let cat of categories) { %>
    <a class="filter text-decoration-none text-dark" href="/listings?category=<%= cat.name %>">
      <i class="fa-solid <%= cat.icon %>"></i>
      <p><%= cat.name %></p>
    </a>
  <% } %>

  <!-- Tax Switch -->
  <div class="tax-switch">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<!-- ✅ Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
        <div class="card-body">
          <p class="card-text">
            <%= listing.title %><br>
            <% if (listing.price != null) { %>
              <%= Number(listing.price).toLocaleString("en-IN", { style: "currency", currency: "INR" }) %> /night
            <% } else { %>
              Price not available
            <% } %>
            <i class="tax-info"> &nbsp; &nbsp; +18% GST </i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<!-- ✅ Scripts -->
<script>
  // GST Toggle
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = info.style.display === "inline" ? "none" : "inline";
    }
  });

  // Filter Toggle Button Logic
  const filterBtn = document.getElementById("filterToggleBtn");
  const filters = document.getElementById("filters");

  filterBtn.addEventListener("click", () => {
    filters.style.display = filters.style.display === "none" || filters.style.display === "" ? "flex" : "none";
  });
</script>
