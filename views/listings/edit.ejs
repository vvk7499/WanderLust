<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h3 class="mb-4">Edit Your Listing</h3>

  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data"
    
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required />
      <div class="valid-feedback">Looks good!</div>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea id="description" name="listing[description]" class="form-control" rows="3" required><%= listing.description %></textarea>
    </div>

    <!-- Image -->
    <div class="mb-3">
      <label for="image" class="form-label">Upload New Image</label>
      <input id="image" name="listing[image]" value="<%= listing.image?.url %>" type="file" class="form-control" />
      <% if (listing.image && listing.image.url) { %>
        <small class="text-muted">Current image:</small><br>
        <img src="<%= listing.image.url %>" alt="Current image" style="width: 250px; height: auto;" class="img-thumbnail mt-2">
        <!-- Preserve filename if user doesn't change image -->
        <input type="hidden" name="listing[image][filename]" value="<%= listing.image.filename %>">
      
      <% } %>
      
    </div>

<!-- Price & Country -->
<div class="row g-3 mb-3">
  <div class="col-md-4 col-12">
    <label for="price" class="form-label">Price</label>
    <input id="price" name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required />
    <div class="invalid-feedback">Please enter a valid price</div>
  </div>
  <div class="col-md-8 col-12">
    <label for="country" class="form-label">Country</label>
    <input id="country" name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required />
    <div class="invalid-feedback">Please enter a country.</div>
  </div>
</div>
